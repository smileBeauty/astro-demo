---
import BaseLayout from "@/layouts/base-layout.astro"
const allPosts = await Astro.glob('./*.md');
---

<BaseLayout pageTitle="posts index">
  <div>
    <h1>文章目录</h1>
    <ul>
      {allPosts.map((post) => <li><a href={post.url}>{post.frontmatter.title}</a></li>)}
    </ul>
  </div>
</BaseLayout>
